# =====================================================
# ISTHO CRM - Variables de Entorno
# =====================================================

# Ambiente
NODE_ENV=development
PORT=5000
API_PREFIX=/api/v1

# Base de datos (XAMPP por defecto)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=istho_crm
DB_USER=root
DB_PASSWORD=
DB_LOGGING=true
DB_POOL_MAX=10
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# JWT - Autenticación
JWT_SECRET=istho_crm_jwt_secret_2026_cambiar_en_produccion
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Email SMTP (configurar después)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=notificaciones@istho.com.co
SMTP_PASS=app_password_aqui
EMAIL_FROM=ISTHO CRM <notificaciones@istho.com.co>

# Upload de archivos
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=.pdf,.doc,.docx,.xls,.xlsx,.jpg,.jpeg,.png

# WMS Copérnico (configurar después)
WMS_API_URL=https://api.copernico.sgv.com
WMS_API_KEY=
WMS_API_SECRET=

# Seguridad
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log